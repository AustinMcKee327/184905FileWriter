<Window x:Class="_184905FileWriterExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_184905FileWriterExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox x:Name="txtName"/>
        <TextBox x:Name="txtInput"/>
        <Button x:Name="btnWrite" Click="btnWrite_Click" Content="Click to Write"/>
        <Button x:Name="btnAppend" Click="btnAppend_Click" Content="Click to Append"/>
        <Button x:Name="btnSquare" Click="btnSquare_Click" Content="Click to Square the numbers"/>
    </StackPanel>
</Window>
